{
  "name": "pgpconnect",
  "version": "0.0.1",
  "description": "decentralized identity helper",
  "author": "Florian Blanc",
  "license": "LGPL-3.0+",
  "homepage": "https://foostack.io",
  "keywords": [
    "browser",
    "extension",
    "openpgp"
  ],
  "scripts": {
    "dev": "node ./scripts/sharp.js && cross-env NODE_ENV=development webpack && node ./src/server.js",
    "build": "node ./scripts/sharp.js && cross-env NODE_ENV=development webpack && npm run zip",
    "build:prod": "node ./scripts/sharp.js && cross-env NODE_ENV=production webpack && npm run zip",
    "zip": "mkdir -p ./dist && cd dist && zip -r ../webextension.zip ./*"
  },
  "dependencies": {
    "openpgp": "^5.11.2",
    "uikit": "^3.21.16"
  },
  "devDependencies": {
    "buffer": "^6.0.3",
    "cross-env": "^7.0.3",
    "css-loader": "^6.11.0",
    "javascript-obfuscator": "^4.1.0",
    "sass": "^1.80.5",
    "sass-loader": "^13.3.3",
    "sharp": "^0.32.6",
    "style-loader": "^3.3.4",
    "terser-webpack-plugin": "^5.3.8",
    "webextension-polyfill": "^0.12.0",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4",
    "webpack-obfuscator": "^3.5.1"
  }
}
